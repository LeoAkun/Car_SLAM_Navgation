<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find robot)/urdf/robot/common_inertial.xacro"/>

    <xacro:macro name="wheel_xacro" params="wheel_name xyz">
        <!-- 机器人的wheel部件 -->
        <link name="${wheel_name}_link">
            <!-- 部件外观描述 -->
            <visual>

                <!-- 沿着自己几何中心的偏移和旋转(弧度制) -->
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>

                <!-- 几何形状 -->
                <geometry>
                    <!-- 圆柱 -->
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>

                <!-- 材质颜色 -->
                <material name="yellow">
                    <!-- RGB透明度 -->
                    <color rgba="1.0 1.0 0.0 0.8"/>
                </material>
            </visual>

            <!-- 碰撞属性 -->
            <collision>
                <!-- 沿着自己几何中心的偏移和旋转(弧度制) -->
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>

                <!-- 几何形状 -->
                <geometry>
                    <!-- 圆柱 -->
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>

                <!-- 材质颜色 -->
                <material name="yellow">
                    <!-- RGB透明度 -->
                    <color rgba="1.0 1.0 0.0 0.8"/>
                </material>
            </collision>

            <!-- 质量与惯性 -->
            <xacro:cylinder_inertia m="0.05" r="0.05" h="0.04"/>
            
        </link> 
        
        <!-- 机器人的关节：组合机器人部件 -->
        <!-- wheel是活动的，所以使用"continuous" -->
        <joint name="${wheel_name}_joint" type="continuous">
            
            <!-- 表示把wheel固定到机器人上 -->
            <parent link="base_link"/>
            <child link="${wheel_name}_link"/>
            
            <!-- 固定位置，固定在几何中心向上0.03m -->
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>

            <!-- 绕y轴旋转 -->
            <axis xyz="0 1 0"/>

            <limit effort="100" velocity="10" lower="-100" upper="100"/>
        </joint>

        <gazebo reference="${wheel_name}_link">
            <mu1 value="5.0"/>   <!-- 切向摩擦系数 -->
            <mu2 value="5.0"/>   <!-- 法向摩擦系数 -->
            <kp value="1000000000.0"/> <!-- 刚度擦系数 -->
            <kd value="1.0"/>     <!-- 阻尼系数 -->

            <material>Gazebo/Yellow</material>
        </gazebo>
    </xacro:macro>

</robot>