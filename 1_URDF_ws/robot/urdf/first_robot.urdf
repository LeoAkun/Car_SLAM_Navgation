<?xml version="1.0"?>
<robot name="first_robot">
    <!-- 机器人身体 -->
    <link name="base_link">
        <!-- 部件外观描述 -->
        <visual>

            <!-- 沿着自己几何中心的偏移和旋转 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>

            <!-- 几何形状 -->
            <geometry>
                <!-- 圆柱体， 半径0.10m， 高度0.12m -->
                <cylinder radius="0.10" length="0.12"/>
            </geometry>

            <!-- 材质颜色 -->
            <material name="white">
                <!-- RGB透明度 -->
                <color rgba="1.0 1.0 1.0 0.5"/>
            </material>
        </visual>
    </link>

    <!-- 机器人的IMU部件 -->
    <link name="imu_link">
        <!-- 部件外观描述 -->
        <visual>

            <!-- 沿着自己几何中心的偏移和旋转 -->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>

            <!-- 几何形状 -->
            <geometry>
                <!-- 正方体， 长0.02m， 宽0.02m，高0.02m -->
                <box size="0.02 0.02 0.02"/>
            </geometry>

            <!-- 材质颜色 -->
            <material name="black">
                <!-- RGB透明度 -->
                <color rgba="0.0 0.0 0.0 0.5"/>
            </material>
        </visual>
    </link>

    <!-- 机器人的关节：组合机器人部件 -->

    <!-- IMU是固定死的，所以使用"fixed" -->
    <joint name="imu_joint" type="fixed">
        
        <!-- 表示把imu固定到机器人上 -->
        <parent link="base_link"/>
        <child link="imu_link"/>
        
        <!-- 固定位置，固定在几何中心向上0.03m -->
        <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>

    </joint>
</robot>